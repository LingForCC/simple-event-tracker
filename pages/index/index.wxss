/* 月份导航 */
.month-nav {
  margin-bottom: 30rpx;
}

.nav-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.nav-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: #f0f0f0;
  border: none;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.nav-btn:active {
  background-color: #e0e0e0;
  transform: scale(0.95);
}

.month-text {
  width: 500rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.today-btn {
  text-align: center;
}

/* 日历样式 */
.calendar {
  margin-bottom: 30rpx;
}

.weekdays {
  display: flex;
  margin-bottom: 20rpx;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  padding: 10rpx 0;
}

.days-grid {
  display: flex;
  flex-wrap: wrap;
}

.day-item {
  width: calc(100% / 7);
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border: 1rpx solid #f0f0f0;
  box-sizing: border-box;
}

.day-item.current-month {
  background-color: white;
}

.day-item.other-month {
  background-color: #fafafa;
  color: #ccc;
}

.day-item.today {
  background-color: #e3f2fd;
}

.day-item.weekend {
  background-color: #fff5f5;
}

.day-number {
  font-size: 32rpx;
  margin-bottom: 5rpx;
}

.record-indicator {
  position: absolute;
  bottom: 5rpx;
  right: 5rpx;
  min-width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  color: white;
  font-weight: bold;
  padding: 0 8rpx;
}

.record-indicator.success {
  background-color: #34c759;
}

/* 统计信息 */
.stats {
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.stats-row {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stats-divider {
  height: 1rpx;
  background-color: #e0e0e0;
  margin: 30rpx 0;
}

.text-primary {
  color: #007aff;
}

.text-success {
  color: #34c759;
}

.text-muted {
  color: #8e8e93;
}

/* 清空按钮样式 */
.clear-section {
  margin-top: 30rpx;
  text-align: center;
}

.btn {
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.2s ease;
}

.btn-primary {
  background-color: #007aff;
  color: white;
}

.btn-primary:active {
  background-color: #0056b3;
  transform: scale(0.95);
}

.btn-danger {
  background-color: #ff4757;
  color: white;
  font-weight: bold;
}

.btn-danger:active {
  background-color: #ff3838;
  transform: scale(0.95);
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
